function debug:draw()
	local status=''
	for message in all(self.messages) do
		status=status..' '..message
	end
	print(status,0,0,7)
end

function debug:update()
	self.messages={
		'grnd:'..(player.grounded and '1' or '1'),
		'inpx:'..input.x,
		'velx:'..player.velocity.x,
		'vely:'..player.velocity.x
	}
end

